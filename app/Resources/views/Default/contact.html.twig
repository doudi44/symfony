
{% extends 'layout.html.twig' %}

{% block titleContent %}
    Contact
{% endblock %}

{% block content %}

    {# modifier par default le design du formulaire :

    {% form_theme formContact _self %}

    {% block form_label %}

        <strong>Modification de l'affichage d'un label</strong>

        {% endblock %}

    #}



    {# Affichage du message de success	#}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(formContact, {attr: {novalidate:"novalidate"}}) }}

    <div>

        {{ form_label(formContact.firstname, "Votre prénom et nom", {label_attr: {class: 'form-control  bg-navy-active'}}) }}


        {{ form_errors(formContact.firstname) }}
        {{ form_errors(formContact.lastname) }}

        {{ form_widget(formContact.firstname, {attr: {placeholder: "votre prénom"}}) }}
        {{ form_widget(formContact.lastname, {attr: {placeholder: "votre nom"}}) }}

    </div><br>


    <div>
        {{ form_label(formContact.email, "Votre email", {label_attr:{class: 'form-control  bg-navy-active'}}) }}
        {{ form_errors(formContact.email) }}

        {{ form_widget(formContact.email, {attr: { placeholder: 'email',class:"form-control"  }} ) }}
    </div>
    <br>

    <div>
        {{ form_label(formContact.content, "Votre message", {label_attr:{class: 'form-control  bg-navy-active'}}) }}
        {{ form_errors(formContact.content) }}

        {{ form_widget(formContact.content,{attr:{class:"form-control"}}) }}
    </div><br><br>

    <button>Envoyer</button>
    {{ form_end(formContact) }}

{% endblock %}
