
{% set p = 0 %}

<ol class="carousel-indicators">

    {% for prod in products %}



        <li data-target="#carousel-example-generic" data-slide-to="{{ p }}" {% if p == 0 %} class="active" {% endif %}></li>

        {% set p = p+1 %}


    {% endfor %}

</ol>



<div class="carousel-inner">


    {% for prod in products %}


            <div class="item{% if loop.first %} active {% endif %}">
                <a href="{{ path('PublicProduitShow',{'id':prod.id}) }}">
                    <img class="slide-image" src="{{ asset('img/'~prod.image) }}" alt="" style="width:auto;height:300px;margin:auto">
                </a>

            </div>


    {% endfor %}

</div>
