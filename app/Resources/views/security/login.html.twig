{% extends 'layoutPublic.html.twig' %}

{% block stylesheets %}

    <!-- Custom CSS -->
    <link href="{{ asset('public/shop/css/shop-homepage.css') }}" rel="stylesheet">


{% endblock %}


{%  block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}



    <form action="{{ path('security.login') }}" method="post" >
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit">login</button>

        <br><br><br>


        <a href="{{ path('security.signin') }}" class="btn btn-success">Nouveau Compte</a>


        <br><br><br>

        <a href="{{ path('homepage') }}" class="btn btn-primary">retour sur le site</a>
    </form>

{%  endblock %}